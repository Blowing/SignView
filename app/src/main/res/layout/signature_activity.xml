<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/ll_doc_process_prent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <!-- 设置整体距离右边的距离 -->

        <RelativeLayout
            android:id="@+id/aa"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/ll_signature__crent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#F3EACD"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_signature__scolor"
                android:layout_width="wrap_content"
                android:layout_height="65dip"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@drawable/bg_pen_color"
                android:gravity="top"
                android:orientation="horizontal"
                android:padding="5dip"
                android:visibility="gone" >

                <LinearLayout
                    android:id="@+id/ll_selectClore_red"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:layout_marginLeft="5dip"
                    android:gravity="center"
                    android:visibility="visible" >

                    <ImageView
                        android:layout_width="45dip"
                        android:layout_height="45dip"
                        android:src="@drawable/ic_color_red" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_selectClore_black"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:layout_marginLeft="5dip"
                    android:gravity="center"
                    android:visibility="visible" >

                    <ImageView
                        android:layout_width="45dip"
                        android:layout_height="45dip"
                        android:src="@drawable/ic_color_black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_selectClore_blue"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:layout_marginLeft="5dip"
                    android:gravity="center"
                    android:visibility="visible" >

                    <ImageView
                        android:layout_width="45dip"
                        android:layout_height="45dip"
                        android:src="@drawable/ic_color_blue" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/ll_signature_selectClore"
                style="@style/ll_flow_bottom"
                android:layout_width="0dip"
                android:layout_height="@dimen/btn_buttom_height"
                android:layout_weight="2"
                android:visibility="visible" >

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="0dip"
                    android:layout_height="0dip">
                    <requestFocus />
                </EditText>

                <ImageView
                    android:id="@+id/img_sign_operate_corle"
                    android:layout_width="32dip"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pen_color_black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_signature_revoke"
                style="@style/ll_flow_bottom"
                android:layout_width="0dip"
                android:layout_height="@dimen/btn_buttom_height"
                android:layout_weight="3"
                android:visibility="visible" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_revocate"
                    android:drawablePadding="5dip"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="撤销" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_signature_clear"
                style="@style/ll_flow_bottom"
                android:layout_width="0dip"
                android:layout_height="@dimen/btn_buttom_height"
                android:layout_weight="4"
                android:visibility="visible" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_delete_all"
                    android:drawablePadding="5dip"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="全部清除" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_signature_deleltqz"
                style="@style/ll_flow_bottom"
                android:layout_width="0dip"
                android:layout_height="@dimen/btn_buttom_height"
                android:layout_weight="2"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete_signature" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_signature_dzqz"
                style="@style/ll_flow_bottom"
                android:layout_width="0dip"
                android:layout_height="@dimen/btn_buttom_height"
                android:layout_weight="2"
                android:gravity="center"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="32dip"
                    android:layout_height="wrap_content"

                    android:src="@drawable/ic_signature" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>